@model IEnumerable<string>

@Html.ActionLink("Домой", "List", "Service", null,
	new { @class = "btn btn-lg" })

@foreach (var link in Model)
{
	@Html.RouteLink(link, new
{
	controller = "Service",
	action = "List",
	category = link,
	page = 1
}, new
{
	@class = "btn btn-lg" + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
})
}
